# Production environment template
# Copy to .env for local production builds, or set these in EAS Secrets / your CI.

# Require sign-in for all users (set to true for production)
EXPO_PUBLIC_REQUIRE_AUTH=true

# Firebase (required for production â€“ get from Firebase Console)
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
EXPO_PUBLIC_FIREBASE_APP_ID=

# Optional: backend API base URL
# EXPO_PUBLIC_API_URL=https://api.yourdomain.com

# Optional: News API (if using news feature)
# EXPO_PUBLIC_NEWS_API_KEY=

# Optional: build versioning (EAS can auto-increment)
# EXPO_ANDROID_VERSION_CODE=1
# EXPO_IOS_BUILD_NUMBER=1
