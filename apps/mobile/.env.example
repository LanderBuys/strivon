# Copy to .env and fill in values. Do not commit .env.

# Workaround for Expo CLI "Body has already been read" when fetching native modules
EXPO_NO_CACHE=1

# News (see NEWS_API_SETUP.md)
EXPO_PUBLIC_NEWS_API_KEY=your_newsapi_key_here

# API (backend base URL; leave empty to use mocks)
EXPO_PUBLIC_API_URL=

# Auth: set "true" for production so unauthenticated users are sent to sign-in
EXPO_PUBLIC_REQUIRE_AUTH=false
# For production build: set EXPO_PUBLIC_REQUIRE_AUTH=true in your .env

# Firebase (optional; leave empty to run without auth)
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
EXPO_PUBLIC_FIREBASE_APP_ID=

# Build versioning (optional; used in app.config.js)
# EXPO_ANDROID_VERSION_CODE=1
# EXPO_IOS_BUILD_NUMBER=1
