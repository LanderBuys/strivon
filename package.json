{
  "name": "strivon",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "overrides": {
    "minimatch": ">=10.2.1"
  },
  "workspaces": ["apps/*"],
  "scripts": {
    "start": "npm run dev:mobile",
    "dev:mobile": "cross-env EXPO_NO_CACHE=1 npm --prefix apps/mobile run start:offline",
    "dev:web": "npm --prefix apps/web run dev",
    "deploy:firestore": "firebase deploy --only firestore"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "@types/react": "~19.1.10",
    "firebase-admin": "^13.6.1",
    "firebase-tools": "^13.0.0",
    "picocolors": "^1.1.1",
    "source-map-js": "^1.2.1",
    "typescript": "~5.9.2"
  },
  "dependencies": {
    "expo": "~54.0.30",
    "expo-blur": "~15.0.8",
    "expo-clipboard": "~8.0.8",
    "expo-constants": "~18.0.12",
    "expo-font": "~14.0.10",
    "expo-image": "~3.0.11",
    "expo-image-picker": "~17.0.10",
    "expo-linking": "~8.0.11",
    "expo-router": "~6.0.21",
    "expo-status-bar": "~3.0.9",
    "firebase": "^12.6.0"
  }
}
